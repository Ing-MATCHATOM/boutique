<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Liste des Fournisseurs</title>
  <style>
    :root {
      --primary-color: #3498db;
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --light-color: #ecf0f1;
      --dark-color: #34495e;
      --success-color: #2ecc71;
      --warning-color: #f39c12;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background-color: #f5f7fa;
      color: #333;
    }

    .sidebar {
      width: 280px;
      background-color: var(--secondary-color);
      color: white;
      padding: 20px 0;
      box-shadow: var(--box-shadow);
      z-index: 100;
      transition: var(--transition);
      overflow-y: auto;
    }

    .logo {
      display: flex;
      align-items: center;
      padding: 0 20px 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      margin-bottom: 20px;
    }

    .logo h1 {
      font-size: 1.5rem;
      margin-left: 10px;
    }

    .logo-icon {
      font-size: 1.8rem;
      color: var(--primary-color);
    }

    .nav-section {
      margin-bottom: 30px;
    }

    .nav-section h2 {
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 0 20px;
      margin-bottom: 15px;
      color: rgba(255, 255, 255, 0.6);
    }

    .nav-item {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      transition: var(--transition);
      border-left: 3px solid transparent;
    }

    .nav-item:hover {
      background-color: rgba(255, 255, 255, 0.05);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-item.active {
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-icon {
      margin-right: 12px;
      font-size: 1.2rem;
    }

    .main-content {
      flex: 1;
      padding: 30px;
      overflow-y: auto;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .header h1 {
      color: var(--secondary-color);
      font-size: 1.8rem;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      padding: 10px 20px;
      background-color: var(--primary-color);
      color: white;
      text-decoration: none;
      border-radius: var(--border-radius);
      font-weight: 500;
      transition: var(--transition);
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-icon {
      margin-right: 8px;
    }

    .btn-warning {
      background-color: var(--warning-color);
    }

    .btn-warning:hover {
      background-color: #e67e22;
    }

    .btn-danger {
      background-color: var(--accent-color);
    }

    .btn-danger:hover {
      background-color: #c0392b;
    }

    .btn-small {
      padding: 6px 12px;
      font-size: 0.8rem;
    }

    .table-container {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      overflow: hidden;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background-color: var(--light-color);
      padding: 15px;
      text-align: left;
      font-weight: 600;
      color: var(--dark-color);
      border-bottom: 1px solid #ddd;
    }

    td {
      padding: 15px;
      border-bottom: 1px solid #eee;
    }

    tr:last-child td {
      border-bottom: none;
    }

    tr:hover {
      background-color: rgba(52, 152, 219, 0.05);
    }

    .country-flag {
      margin-right: 8px;
    }

    .actions-cell {
      display: flex;
      gap: 8px;
      justify-content: flex-end;
    }

    /* Modal de confirmation */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
      background-color: white;
      margin: 15% auto;
      padding: 30px;
      border-radius: var(--border-radius);
      width: 90%;
      max-width: 500px;
      box-shadow: var(--box-shadow);
    }

    .modal-title {
      color: var(--accent-color);
      margin-bottom: 15px;
      font-size: 1.3rem;
    }

    .modal-text {
      margin-bottom: 25px;
      line-height: 1.6;
    }

    .modal-actions {
      display: flex;
      gap: 10px;
      justify-content: flex-end;
    }

    /* Modal de modification */
    .form-group {
      margin-bottom: 20px;
    }

    .form-label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: var(--dark-color);
    }

    .form-input {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: var(--border-radius);
      font-size: 1rem;
      transition: var(--transition);
    }

    .form-input:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      
      .sidebar {
        width: 100%;
        height: auto;
      }
      
      .nav-items {
        display: flex;
        overflow-x: auto;
      }
      
      .nav-section {
        margin-bottom: 0;
        min-width: max-content;
      }
      
      .nav-section h2 {
        display: none;
      }

      .actions-cell {
        flex-direction: column;
      }

      .modal-content {
        margin: 20% auto;
        width: 95%;
      }

      .modal-actions {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="logo">
      <span class="logo-icon">üè≠</span>
      <h1>Gestion Fournisseurs</h1>
    </div>
    
    <div class="nav-section">
      <h2>Navigation</h2>
      <a href="/" class="nav-item ">
        <span class="nav-icon">üè†</span>
        <span>Tableau de Bord</span>
      </a>
      <a href="/fournisseurs" class="nav-item active">
        <span class="nav-icon">üìã</span>
        <span>Liste des Fournisseurs</span>
      </a>
      <a href="/fournisseurs/inscription" class="nav-item">
        <span class="nav-icon">‚ûï</span>
        <span>Nouveau Fournisseur</span>
      </a>
      <a href="/clients" class="nav-item">
        <span class="nav-icon">üë•</span>
        <span>Gestion Clients</span>
      </a>
    </div>
  </div>
  
  <div class="main-content">
    <div class="header">
      <h1>Liste des Fournisseurs</h1>
      <a href="/fournisseurs/inscription" class="btn">
        <span class="btn-icon">‚ûï</span>
        Nouveau Fournisseur
      </a>
    </div>
    
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>T√©l√©phone</th>
            <th>Email</th>
            <th>Pays</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (fournisseurs && fournisseurs.length > 0) { %>
            <% fournisseurs.forEach(fournisseur => { %>
              <tr>
                <td><%= fournisseur.id_fournisseur %></td>
                <td><%= fournisseur.nom %></td>
                <td><%= fournisseur.telephone %></td>
                <td><%= fournisseur.email %></td>
                <td>
                  <span class="country-flag">
                    <% 
                      const flags = {
                        'France': 'üá´üá∑',
                        'Belgique': 'üáßüá™', 
                        'Suisse': 'üá®üá≠',
                        'Allemagne': 'üá©üá™',
                        'Espagne': 'üá™üá∏',
                        'Italie': 'üáÆüáπ'
                      };
                    %>
                    <%= flags[fournisseur.pays] || 'üåç' %>
                  </span>
                  <%= fournisseur.pays %>
                </td>
                <td class="actions-cell">
                  <button onclick="openEditModal(<%= JSON.stringify(fournisseur).replace(/"/g, '&quot;') %>)" 
                          class="btn btn-warning btn-small">
                    <span class="btn-icon">‚úèÔ∏è</span>
                    Modifier
                  </button>
                  <button onclick="openDeleteModal(<%= fournisseur.id_fournisseur %>, '<%= fournisseur.nom.replace(/'/g, "\\'") %>')" 
                          class="btn btn-danger btn-small">
                    <span class="btn-icon">üóëÔ∏è</span>
                    Supprimer
                  </button>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" style="text-align: center; padding: 40px;">
                Aucun fournisseur trouv√©. 
                <a href="/fournisseurs/inscription" style="color: var(--primary-color); text-decoration: none;">
                  Ajoutez le premier fournisseur
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal de modification -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <h3 class="modal-title">Modifier le fournisseur</h3>
      
      <form id="editForm" method="POST">
        <div class="form-group">
          <label class="form-label">Nom</label>
          <input type="text" name="nom" class="form-input" required>
        </div>

        <div class="form-group">
          <label class="form-label">T√©l√©phone</label>
          <input type="text" name="telephone" class="form-input" required>
        </div>

        <div class="form-group">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-input">
        </div>

        <div class="form-group">
          <label class="form-label">Pays</label>
          <select name="pays" class="form-input" required>
            <option value="">S√©lectionnez un pays</option>
            <option value="France">üá´üá∑ France</option>
            <option value="Belgique">üáßüá™ Belgique</option>
            <option value="Suisse">üá®üá≠ Suisse</option>
            <option value="Allemagne">üá©üá™ Allemagne</option>
            <option value="Espagne">üá™üá∏ Espagne</option>
            <option value="Italie">üáÆüáπ Italie</option>
            <option value="Autre">üåç Autre</option>
          </select>
        </div>

        <div class="modal-actions">
          <button type="button" onclick="closeEditModal()" class="btn btn-secondary">
            Annuler
          </button>
          <button type="submit" class="btn btn-warning">
            <span class="btn-icon">üíæ</span>
            Enregistrer
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal de confirmation de suppression -->
  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <h3 class="modal-title">Confirmer la suppression</h3>
      <p class="modal-text" id="deleteModalText">
        <!-- Le texte sera ins√©r√© dynamiquement -->
      </p>
      <div class="modal-actions">
        <button onclick="closeDeleteModal()" class="btn btn-secondary">
          Annuler
        </button>
        <form id="deleteForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">
            <span class="btn-icon">üóëÔ∏è</span>
            Supprimer d√©finitivement
          </button>
        </form>
      </div>
    </div>
  </div>

<script>
    // ‚≠ê D√âPLACEZ TOUT CE SCRIPT ICI, √Ä LA FIN DU BODY
    
    console.log("=== TEST JAVASCRIPT ===");
    console.log("‚úÖ Le JavaScript est charg√© !");
    console.log("üìç URL actuelle:", window.location.href);

    // Test des fonctions
    console.log("üîç Test fonction openEditModal:", typeof openEditModal);
    console.log("üîç Test fonction openDeleteModal:", typeof openDeleteModal);

    // Test des boutons
    const buttons = document.querySelectorAll('button');
    console.log("üîò Nombre de boutons trouv√©s:", buttons.length);

    // V√©rifier si les boutons Modifier existent
    const editButtons = document.querySelectorAll('.btn-warning');
    console.log("‚úèÔ∏è Boutons Modifier trouv√©s:", editButtons.length);

    editButtons.forEach((btn, index) => {
        console.log(`Bouton ${index + 1}:`, btn.textContent);
        btn.addEventListener('click', function() {
            console.log("üéØ Bouton cliqu√©!", this.textContent);
        });
    });

    document.addEventListener('DOMContentLoaded', function() {
        console.log("‚úÖ DOM enti√®rement charg√©");
        
        const navItems = document.querySelectorAll('.nav-item');
        console.log("üìå Items de navigation:", navItems.length);
        
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                navItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    });

    // Gestion des modals
    let currentFournisseurId = null;

    function openEditModal(fournisseur) {
        console.log("=== OUVERTURE MODAL MODIFICATION ===");
        console.log("üìã Donn√©es fournisseur:", fournisseur);
        
        currentFournisseurId = fournisseur.id_fournisseur;
        
        const form = document.getElementById('editForm');
        
        // TEST : Essayez les deux formats
        const action1 = `/fournisseurs/modifier/${fournisseur.id_fournisseur}`;
        const action2 = `/fournisseurs/${fournisseur.id_fournisseur}/modifier`;
        
        console.log("üîÑ Action format 1:", action1);
        console.log("üîÑ Action format 2:", action2);
        
        // Utilisez le format qui correspond √† vos routes
        form.action = action1; // ou action2 selon votre route
        
        console.log("‚úÖ Action d√©finie:", form.action);
        
        // Remplir les champs
        form.nom.value = fournisseur.nom || '';
        form.telephone.value = fournisseur.telephone || '';
        form.email.value = fournisseur.email || '';
        form.pays.value = fournisseur.pays || '';
        
        console.log("‚úÖ Champs remplis");
        document.getElementById('editModal').style.display = 'block';
        console.log("‚úÖ Modal affich√©");
    }

    function closeEditModal() {
        document.getElementById('editModal').style.display = 'none';
        currentFournisseurId = null;
    }

    function openDeleteModal(id, nom) {
        console.log("üóëÔ∏è Ouverture modal suppression pour:", id, nom);
        
        currentFournisseurId = id;
        
        document.getElementById('deleteModalText').innerHTML = 
            `√ätes-vous s√ªr de vouloir supprimer le fournisseur <strong>"${nom}"</strong> ?<br><br>
             Cette action est irr√©versible.`;
        
        const form = document.getElementById('deleteForm');
        form.action = `/fournisseurs/supprimer/${id}`;
        
        document.getElementById('deleteModal').style.display = 'block';
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').style.display = 'none';
        currentFournisseurId = null;
    }

    // Fermer les modals en cliquant en dehors
    window.onclick = function(event) {
        const editModal = document.getElementById('editModal');
        const deleteModal = document.getElementById('deleteModal');
        
        if (event.target === editModal) closeEditModal();
        if (event.target === deleteModal) closeDeleteModal();
    }

    // Confirmation pour la suppression
    document.getElementById('deleteForm').addEventListener('submit', function(e) {
        const confirmation = confirm('√ätes-vous ABSOLUMENT S√õR de vouloir supprimer ce fournisseur ?');
        if (!confirmation) {
            e.preventDefault();
            closeDeleteModal();
        }
    });

    // Ajoutez aussi un listener pour le submit du formulaire
    document.getElementById('editForm').addEventListener('submit', function(e) {
        console.log("=== SUBMIT FORMULAIRE MODIFICATION ===");
        console.log("üì§ Action:", this.action);
        console.log("üì¶ Donn√©es envoy√©es:", {
            nom: this.nom.value,
            telephone: this.telephone.value,
            email: this.email.value,
            pays: this.pays.value
        });
        console.log("‚úÖ Formulaire soumis");
    });

  </script>
</body>
</html>